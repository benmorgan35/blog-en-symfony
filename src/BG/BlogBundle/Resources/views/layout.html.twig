{#src/BG/BlogBundle/Resources/views/layout.html.twig#}

<!DOCTYPE HTML>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Blog de Jean Forteroche{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    {% endblock %}
</head>

<body>
<div class="container">
    <div id="header" class="jumbotron">
        <h1>Un billet pour l'Alaska</h1>
        <p>
            Roman en ligne écrit par Jean Forteroche.
        </p>

    </div>

    {% for flash_message in app.session.flashBag.get('notice') %}
    <div class="alert alert-info">
        {{ flash_message }}
    </div>
    {% endfor %}




    <div class="row">
        <div id="menu" class="col-md-3">
            <h3>Episodes</h3>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('bg_blog_home') }}">Accueil / Liste des épisodes</a></li>


                {{ render(controller("BGBlogBundle:Billet:menu", {'limit': 1})) }}
            </ul>
            <h3>Espace admin</h3>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('bg_blog_home') }}">Connexion</a></li>
                <li><a href="{{ path('bg_blog_add') }}">Ajouter un épisode</a></li>

            </ul>
        </div>
        <div id="menu" class="col-md-9">
    <div class="contenu">
        {%  block body %}
        {% endblock %}
    </div>
        </div>
    <footer>
        <div class="footer">
            <p>Footer Le blog de Jean forteroche</p>
        </div>
    </footer>

</div>

</body>
</html>