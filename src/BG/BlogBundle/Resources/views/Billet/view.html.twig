{# src/BG/BlogBundle/Resources/views/Billet/view.html.twig #}

{% extends "BGBlogBundle::layout.html.twig" %}

{% block title %}
    Episode - {{ parent() }}
{% endblock %}

{% block body %}

    <h1>{{ billet.title }}</h1>
    <i>Le {{ billet.date|date('d/m/Y') }}</i>

    <div class="well">
        {{ billet.content }}
    </div>

    <p>
        <a href="{{ path('bg_blog_home') }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>
        <a href="{{ path('bg_blog_edit', {'id': billet.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-edit"></i>
            Modifier l'épisode
        </a>
        <a href="{{ path('bg_blog_delete', {'id': billet.id}) }}" class="btn btn-danger">
            <i class="glyphicon glyphicon-trash"></i>
            Supprimer l'épisode
        </a>
    </p>

<hr />

<h2>Commentaires</h2>

    {% for comment in billet.comments %}
        <p>{{ comment.author }}, le  {{ comment.date|date('d/m/Y') }}</p>
        <p>{{ comment.content }}</p>
    {% endfor %}

    <hr />

<h2>Ajouter un commentaire</h2>

    {#{{ include ('BGBlogBundle:Billet:form.html.twig') }}#}



{% endblock %}